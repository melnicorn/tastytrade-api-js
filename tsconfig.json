{
  "compilerOptions": {
    "target": "ES2020",                   // Use modern ES features (Node >=14)
    "module": "NodeNext",                 // Use ESNext module syntax (tsup will handle format conversion)
    "moduleResolution": "NodeNext",       // Node.js module resolution (needed for ESM/CJS dual support)
    "declaration": true,                  // Generate .d.ts type declarations
    "outDir": "dist",                     // Output folder (tsup will also use this)
    "strict": true,                       // Enable all strict type-checking options
    "esModuleInterop": true,              // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist", "tests"]
}